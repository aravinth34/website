node {
   
 stage ('Git download'){
    git 'https://github.com/aravinth34/website.git'
}
  stage ('Backup')  {
  sh 'sshpass -f "/var/lib/jenkins/workspace/password" scp -o StrictHostKeyChecking=no -r maravinth@192.168.56.11:/usr/share/nginx/html/ /opt/nginx_bakup/test'
  }

  stage ('Backup_folder_change')  {
  sh 'sh copy_folder.sh'
  }

  stage ('Deployment'){
  sh 'sshpass -f "/var/lib/jenkins/workspace/password" scp -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null -r /var/lib/jenkins/workspace/nginx/* maravinth@192.168.56.11:/usr/share/nginx/html'
  }
}
